@using LawAlert.Core.Models.User
@model UserViewModel

<div class="team-item text-center bg-white rounded @*overflow-hidden*@ pt-4" style="border: 1px black; padding: 30px; margin-bottom: 15px">
    <h5 class="mb-2 px-4">@Model.FirstName @Model.LastName</h5>
    <p class="mb-3 px-4">Email: @Model.Email</p>
    <p class="mb-3 px-4">Interest: @Model.Interest</p>
    <p class="mb-3 px-4">Username: @Model.UserName</p>
    <p class="mb-3 px-4">Birth Date: @Model.BirthDate</p>
    <p class="mb-3 px-4">Phone Number: @Model.PhoneNumber</p>
    <div class="team-img position-relative">
        @*<img class="img-fluid" src="img/team-1.jpg" alt="">*@
        <div class="team-social">
            <form asp-area="Admin" asp-controller="User" asp-action="Forget" asp-route-Id="@Model.Id" method="get">
                <button type="submit" class="text-secondary m-0">Delete</button>
            </form>
        </div>
    </div>
</div>